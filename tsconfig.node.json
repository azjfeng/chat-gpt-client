{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true
  },
  "include": ["vite.config.ts"],
  "paths": {
    "@shared/*": ["src/shared/*"],
    "@pages/*": ["src/pages/*"],
    "@components/*": ["src/components/*"],
  },
}
